<div class="wrapper ">
	<%= render 'shared/sidebar'%>
	<div class="main-panel">
		<%= render 'shared/navbar'%>
		<div class="content">

			<div class="container-fluid">

				<div class="col-md-12">
					<%= render 'reqitems/form', reqitem: @reqitem %>
					<div class="card">
						<div class="card-header card-header-primary">

							<div class="row">
								<div class="col-md-6">
									<h4 class="card-title ">Siparisler</h4>
									<p class="card-category">Sipariş anahtarın: <%=@order.req_key%></p>
								</div>
								<div class="col-md-6">
									<form class="navbar-form">
										<div class="input-group no-border">
											<input type="text" id="search" onkeyup="myFunction()" value="" class="form-control" placeholder="Kullanıcı İsiminde Arayınız." style="text-color: white;">
											<button type="submit" class="btn btn-white btn-round btn-just-icon">
												<i class="material-icons">search</i>
												<div class="ripple-container"></div>
											</button>
										</div>
									</form>  
								</div>
							</div>
						</div>
						<div class="all_data">
							<%=render 'reqitems/item'%>
						</div>

					</div>
				</div>
				<%= render 'shared/footer'%>
			</div>
		</div>
	</div>

	<script>  
		$(document).ready(function(){  
			$('#search').keyup(function(){  
				search_table($(this).val());  
			});  
			function search_table(value){  
				$('#myTable tr').each(function(){  
					var found = 'false';  
					$(this).each(function(){  
						if($(this).text().toUpperCase().indexOf(value.toUpperCase()) >= 0)  
						{  
							found = 'true';  
						}  
					});  
					if(found == 'true')  
					{  
						$(this).show();  
					}  
					else  
					{  
						$(this).hide();  
					}  
				});  
			}  
		});  
	</script>  


